<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AniBrowse" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/maastricht_blue</item>
        <item name="colorPrimaryVariant">@color/maastricht_blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
        <item name="android:windowBackground">@color/alice_blue</item>
        <item name="fontFamily">@font/sailec</item>
    </style>

    <style name="Theme.AniBrowse.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Theme.AniBrowse.Toolbar">
        <item name="android:background">?attr/colorSecondary</item>
        <item name="titleTextColor">?attr/colorOnSecondary</item>
    </style>

</resources>